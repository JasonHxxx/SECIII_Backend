<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.software.collect.mapperservice.picture.PictureMapper">
    <resultMap id="BaseResultMap" type="team.software.collect.po.picture.Picture">
        <id column="pid" jdbcType="INTEGER" property="pid" />
        <result column="rid" jdbcType="INTEGER" property="rid" />
        <result column="base64" jdbcType="VARCHAR" property="base64" />
    </resultMap>

    <sql id="Base_Column_List" >
        pid, `rid`, `base64`
    </sql>
    
    <select id="selectByRid" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
            <include refid="Base_Column_List" />
        from picture
        where rid = #{rid, jdbcType=INTEGER}
    </select>
    
    <insert id="insert" keyColumn="pid" keyProperty="pid" parameterType="team.software.collect.po.picture.Picture">
        insert into picture (`pid`, `rid`, `base64`)
            values (#{pid, jdbcType=INTEGER}, #{rid, jdbcType=INTEGER}, #{base64, jdbcType=VARCHAR})
    </insert>

</mapper>