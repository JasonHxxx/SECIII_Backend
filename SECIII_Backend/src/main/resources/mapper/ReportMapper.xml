<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="team.software.collect.mapperservice.report.ReportMapper">
    <resultMap id="BaseResultMap" type="team.software.collect.po.report.ReportInfo">
        <id column="rid" jdbcType="INTEGER" property="rid" />
        <result column="uid" jdbcType="INTEGER" property="uid" />
        <result column="intro" jdbcType="VARCHAR" property="intro" />
        <result column="recoverTips" jdbcType="VARCHAR" property="recoverTips" />
        <result column="device" jdbcType="VARCHAR" property="device" />
    </resultMap>

    <sql id="Base_Column_List" >
        rid, `uid`, `intro`, `recoverTips`, `device`
    </sql>

    <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List" />
        from report
        where rid = #{rid, jdbcType=INTEGER}
    </select>

    <select id="selectByUid" parameterType="java.lang.Integer" resultMap="rid">
        select
        <include refid="Base_Column_List" />
        from report
        where uid = #{uid, jdbcType=INTEGER}
    </select>


    <insert id="insert" keyColumn="pid" keyProperty="pid" parameterType="team.software.collect.po.report.ReportInfo">
        insert into report (`rid`, `uid`, `intro`, `recoverTips`, `device`)
        values (#{rid, jdbcType=INTEGER}, #{uid, jdbcType=INTEGER},
                #{intro, jdbcType=VARCHAR}, #{recoverTips, jdbcType=VARCHAR},
                #{device, jdbcType=VARCHAR})
    </insert>

</mapper>